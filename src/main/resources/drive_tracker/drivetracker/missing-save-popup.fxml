<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="drive_tracker.drivetracker.MissingSavePopupController">
   <children>
      <StackPane fx:id="menuPane" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Text fx:id="titleText" strokeType="OUTSIDE" strokeWidth="0.0" text="Could not find save file" translateY="-50.0">
               <font>
                  <Font name="Microsoft Sans Serif" size="42.0" />
               </font>
            </Text>
            <Button fx:id="createNew" mnemonicParsing="false" onAction="#createNewButtonClick" text="Create New Save" translateX="85.0" translateY="25.0" />
            <Button fx:id="findMissingButton" mnemonicParsing="false" onAction="#findMissingButtonClick" text="Find Existing Save" translateX="-85.0" translateY="25.0" />
            <Text fx:id="messageText" strokeType="OUTSIDE" strokeWidth="0.0" translateY="85.0">
               <font>
                  <Font name="Microsoft Sans Serif" size="24.0" />
               </font>
            </Text>
         </children>
      </StackPane>
      <StackPane fx:id="createNewPane" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter File Name" translateY="-50.0">
               <font>
                  <Font name="Microsoft Sans Serif" size="40.0" />
               </font>
            </Text>
            <TextField fx:id="fileNameTextField" maxWidth="400.0" prefWidth="300.0" promptText="File name" />
            <Button fx:id="saveFileNameButton" mnemonicParsing="false" onAction="#saveFileNameButtonClick" text="Save" translateY="60.0" />
         </children></StackPane>
   </children>
</AnchorPane>
